# Manufacturing OEE Analytics - Database Configuration
# Copy this file to .env and fill in your actual credentials

# HISTORIAN Database (MQTT message data)
HISTORIANDB_HOST=your_historian_host
HISTORIANDB_PORT=5432
HISTORIANDB_NAME=your_historian_db_name
HISTORIANDB_USER=your_historian_user
HISTORIANDB_PASS=your_historian_password

# INSIDE Database (Production ERP data)
INSIDEDB_HOST=your_inside_host
INSIDEDB_PORT=5432
INSIDEDB_NAME=your_inside_db_name
INSIDEDB_USER=your_inside_user
INSIDEDB_PASS=your_inside_password

# Application Settings
TIMEZONE=Europe/Copenhagen
DEFAULT_TIME_WINDOW_HOURS=8
CACHE_TTL_SECONDS=300
